{
    "name": "douglasgreen/config-setup",
    "description": "Preconfigured setup files for linting, fixing, and testing PHP and JavaScript projects",
    "type": "library",
    "keywords": [
        "automation",
        "code quality",
        "code standards",
        "code validation",
        "config",
        "fixing",
        "linter",
        "linting",
        "php",
        "phpunit"
    ],
    "homepage": "https://github.com/douglasgreen/config-setup",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "nette/neon": "^3.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "rector/rector": "^1.2",
        "symplify/easy-coding-standard": "^12.3"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\ConfigSetup\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "ecs",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "ecs --fix",
            "rector",
            "sort-composer-json"
        ]
    },
    "bin": [
        "bin/config-setup",
        "bin/sort-composer-json"
    ]
}