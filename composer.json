{
    "name": "douglasgreen/config-setup",
    "description": "Preconfigured setup files for linting, fixing, and testing PHP and JavaScript projects",
    "type": "library",
    "keywords": [
        "automation",
        "code quality",
        "code standards",
        "code validation",
        "config",
        "fixing",
        "linter",
        "linting",
        "php",
        "phpunit"
    ],
    "homepage": "https://github.com/douglasgreen/config-setup",
    "license": "MIT",
    "authors": [
        {
            "name": "Douglas Green",
            "email": "douglas@nurd.site",
            "homepage": "https://nurd.site/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "nette/neon": "^3.4.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93.1",
        "phpcompatibility/php-compatibility": "*",
        "phpstan/phpstan": "^2.1.37",
        "rector/rector": "^2.3.5",
        "shipmonk/dead-code-detector": "^0.13.5",
        "shipmonk/name-collision-detector": "^2.1.1"
    },
    "autoload": {
        "psr-4": {
            "DouglasGreen\\ConfigSetup\\": "src"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": [
            "detect-collisions",
            "php-cs-fixer check --verbose --diff",
            "phpstan analyse",
            "rector --dry-run"
        ],
        "lint:fix": [
            "phpcbf -p",
            "php-cs-fixer fix --verbose --diff",
            "rector",
            "sort_composer_json.php"
        ]
    },
    "bin": [
        "bin/check_composer_usage.php",
        "bin/config_setup.php",
        "bin/sort_composer_json.php"
    ]
}
